<!-- hero.liquid: Sección principal con título destacado -->
<header class="site-header" style="padding: 1rem; background: rgb(0, 0, 0); position: relative; z-index: 10;">
  <a href="{{ routes.root_url }}">
    <img 
      src="https://cdn.shopify.com/s/files/1/0704/2485/4665/files/Imagen_de_WhatsApp_2025-06-17_a_las_10.50.35_4b287cca.jpg?v=1750179128" 
      alt="{{ shop.name }}" 
      class="site-logo" 
      style="max-height: 80px;"
    />
  </a>
</header>

<section class="hero" style="text-align: center; padding: 100px 20px; color: white; position: relative; z-index: 5;">
  <h1 style="font-size: 3rem; font-weight: bold;">{{ section.settings.title }}</h1>
  <p style="font-size: 1.5rem; margin-top: 1rem;">{{ section.settings.subtitle }}</p>
</section>

<!-- Fondo de partículas -->
<div id="particles-js" style="position:fixed; width:100%; height:100%; top:0; left:0; z-index:-1;"></div>
<script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
<script>
  if (window.particlesJS) {
    particlesJS.load('particles-js', 'https://cdn.jsdelivr.net/gh/VincentGarreau/particles.js/particles.json', function() {
      // Particles.js config loaded
    });
  }
</script>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "hero-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título principal",
      "default": "Bienvenido a AuraGK"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Tu tienda de estilo y confianza"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
