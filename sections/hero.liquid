<!-- hero.liquid: Sección principal con título destacado -->
<header class="site-header">
  <a href="{{ routes.root_url }}">
    <img src="https://cdn.shopify.com/s/files/1/0704/2485/4665/files/Imagen_de_WhatsApp_2025-06-17_a_las_10.50.35_4b287cca.jpg?v=1750179128" alt="{{ shop.name }}" class="site-logo" />
  </a>
</header>
{% comment %}
  hero.liquid: Sección principal con título destacado editable
{% endcomment %}

<section class="hero">
  <h1>{{ section.settings.title }}</h1>
  <p>{{ section.settings.subtitle }}</p>
</section>

<div id="particles-js" style="position:fixed; width:100%; height:100%; top:0; left:0; z-index:-2;"></div>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título principal",
      "default": "Bienvenido a AuraGK"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Tu tienda de estilo y confianza"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
