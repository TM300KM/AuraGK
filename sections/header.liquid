<header class="site-header">
  <div class="container">
    <!-- Logo -->
    <div class="site-logo">
      <a href="{{ shop.url }}">
        {% if settings.logo %}
          <img src="{{ settings.logo | img_url: 'medium' }}" alt="{{ shop.name }}" />
        {% else %}
          {{ shop.name }}
        {% endif %}
      </a>
    </div>

    <!-- NavegaciÃ³n -->
    <nav class="site-nav">
      <ul>
        {% for link in linklists.main-menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>

    <!-- BotÃ³n de carrito -->
    <div class="cart-button">
      <a href="/cart" aria-label="Ver carrito">
        ðŸ›’
      </a>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo de la tienda"
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}
