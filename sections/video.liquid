<section class="video-section">
  <video autoplay muted loop playsinline class="background-video">
    <source src="{{ settings.video_url }}" type="video/mp4" />
    Tu navegador no soporta video HTML5.
  </video>

  <div class="video-overlay">
    <h2>{{ settings.title }}</h2>
    <p>{{ settings.subtitle }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Video de fondo",
  "settings": [
    {
      "type": "url",
      "id": "video_url",
      "label": "URL del video"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Bienvenido a AuraGK"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Estilo y lujo en tu tienda"
    }
  ],
  "presets": [
    {
      "name": "Sección Video"
    }
  ]
}
{% endschema %}
